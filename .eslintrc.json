{
    "ignorePatterns": ["extension/include/**/*.js"],
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "$": false,
        "chrome": false,
        "browser": false,
        "settings": true,
        "local_settings": true,
        "Framework7": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "space-before-blocks": ["error", "never"],
        "space-before-function-paren": ["error", "never"],
        "prefer-arrow-callback": "warn",
        "arrow-spacing": "error",
        "no-console": "warn",
        "indent": [
            "error",
            "tab",
            {
              "SwitchCase": 1
            }
        ],
        "linebreak-style": ["error", "windows"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-extra-boolean-cast": "off",
        "camelcase": "off",
        "prefer-template": "warn",
        "no-trailing-spaces": "error",
        "eol-last": "error",
        "no-unused-vars": ["error", {"args": "none"}]
    }
}
